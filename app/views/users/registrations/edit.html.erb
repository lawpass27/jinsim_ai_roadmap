<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 pt-24">
  <div class="max-w-lg mx-auto px-6">
    <div class="backdrop-blur-xl bg-white/80 rounded-3xl shadow-2xl border border-white/50 p-10">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
          회원정보 수정
        </h1>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <h4 class="text-sm font-medium text-red-800 mb-2">다음 오류를 확인해주세요:</h4>
            <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", 
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200" %>
        </div>

        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autocomplete: "email", 
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-600">
            현재 확인 대기 중: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "새 비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <span class="text-xs text-gray-500">(변경하지 않으려면 빈칸으로 두세요)</span>
          <%= f.password_field :password, autocomplete: "new-password", 
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1">최소 <%= @minimum_password_length %>자 이상</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200" %>
        </div>

        <div>
          <%= f.label :current_password, "현재 비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <span class="text-xs text-gray-500">(변경사항을 확인하기 위해 필요합니다)</span>
          <%= f.password_field :current_password, autocomplete: "current-password", 
              class: "w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all duration-200" %>
        </div>

        <div>
          <%= f.submit "정보 수정", 
              class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium py-3 px-6 rounded-xl hover:shadow-lg transform hover:scale-[1.02] transition-all duration-200 cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">계정 삭제</h3>
        <p class="text-sm text-gray-600 mb-4">계정을 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다.</p>
        <%= button_to "계정 삭제", registration_path(resource_name), 
            data: { confirm: "정말로 계정을 삭제하시겠습니까?", turbo_confirm: "정말로 계정을 삭제하시겠습니까?" }, 
            method: :delete, 
            class: "bg-red-600 text-white font-medium py-2 px-4 rounded-xl hover:bg-red-700 transition-colors duration-200" %>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "뒤로 가기", :back, 
            class: "text-sm text-gray-600 hover:text-gray-800 transition-colors duration-200" %>
      </div>
    </div>
  </div>
</div>